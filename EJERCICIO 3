 */
 
 #include <stdio.h>

main() {
	
float base;
float altura;
float resultado1;
float resultado2;

printf("INGRESE LA MEDIDA DE LA BASE:\n");
scanf("%f",&base);


printf("INGRESE LA MEDIDA DE LA ALTURA:\n");
scanf("%f",&altura);

if(altura>0 && base>0) {
	
resultado1=base*altura;
resultado2=resultado1/2;
printf("EL AREA ES: %f",resultado2);

}

else{
	printf("VALOR INVALIDO");
	}
	
